<div>
    <h2>WELCOME </h2>

    <p>What would you like to do?</p>

    <a href="/create-post" class="navbar-item">Create New Post</a>
    {{!-- <a href="/" class="navbar-item">View My Posts Archive</a> --}}

    <div>
  <h2>YOUR Recent Sightings</h2>
  {{#each posts as |post| }}
  <div class="all-posts-container">

    <div class="card">
      <header class="card-header">
        <p class="card-header-title">
          <a href="/post/{{post.id}}">{{post.title}}</a>
        </p>
        <button class="card-header-icon" aria-label="more options">
          <span class="icon">
            <i class="fas fa-angle-down" aria-hidden="true"></i>
          </span>
        </button>
      </header>
    </div>

    <div class="card">
      <div class="card-content">
        <div class="content">
          <p>{{post.sighting}}</p>
        </div>
        <div class="content">
          <p>Gator description: {{post.description}}</p>
        </div>
        <p>Created by {{post.user.userName}} on {{format_date post.date}}</p>
      </div>
    </div>

    <div class="edit-button">
        <button type="submit">Edit</button>

    </div>

    <div class="delete-button">
        <button type="submit">Delete</button>
    </div>

  </div>

  {{/each}}
</div>
</div>