<section class="card">

    <div class="card">
      <header class="card-header">
        <p class="card-header-title">
          <a href="/post/{{id}}">{{title}}</a>
        </p>
        <button class="card-header-icon" aria-label="more options">
          <span class="icon">
            <i class="fas fa-angle-down" aria-hidden="true"></i>
          </span>
        </button>
      </header>
    </div>

    <div class="card">
      <div class="card-content">
        <div class="content">
          <p>{{sighting}}</p>
        </div>
        <div class="content">
          <p>Gator description: {{description}}</p>
        </div>
        <p>Created by {{user.userName}} on {{format_date date}}</p>
      </div>
    </div>

  </div>


</section>