<div>Sightings</div>
{{#each posts as |post| }}
<div class="all-posts-container">
  <div>
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p class="created-by">Created by {{post.user.userName}} on {{post.date}}</p>
  </div>
  <div>
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}